<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <Button
        android:id="@+id/importLasFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/importLasFile"
        />

    <Button
        android:id="@+id/openLasFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/openLasFile"
        app:layout_constraintTop_toBottomOf="@+id/importLasFile" />
    <Button
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/help"
        app:layout_constraintTop_toBottomOf="@+id/openLasFile"
        />
    <Button
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        app:layout_constraintTop_toBottomOf="@+id/help"
        />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>